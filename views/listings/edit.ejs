<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/listings/<%= listing.id %>?_method=PUT" method="POST" class="needs-validation" novalidate
                    enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="mt-3 form-label">New Title</label>
                        <input required class="form-control" type="text" name="listing[title]"
                            value="<%= listing.title %>" placeholder="Enter new title">
                        <div class="valid-feedback">Great choice! The new title looks good.</div>
                        <div class="invalid-feedback">Uh-oh! Please provide a new catchy title.</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">New Description</label>
                        <textarea required class="form-control" name="listing[description]"
                            placeholder="Enter new description"><%= listing.description %></textarea>
                        <div class="valid-feedback">Fantastic! Your new description is detailed and informative.</div>
                        <div class="invalid-feedback">Oops! Your new listing description is required.</div>
                    </div>


                    <div class="mb-3">
                        <p>Original listing image</p>
                        <img src="<%= originalUrl %>" alt="Listing Image">
                    </div>
                    
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload new Image</label>
                        <input required class="form-control" type="file" name="listing[image]">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">New Price (per night)</label>
                            <input required class="form-control" type="number" name="listing[price]"
                                value="<%= listing.price %>" placeholder="Enter new price">
                            <div class="valid-feedback">Awesome! You've set a valid new nightly price.</div>
                            <div class="invalid-feedback">Please enter a valid numeric value for the new nightly price.
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">New Country</label>
                            <input required class="form-control" type="text" name="listing[country]"
                                value="<%= listing.country %>" placeholder="Enter new country">
                            <div class="valid-feedback">New country specified successfully!</div>
                            <div class="invalid-feedback">Please provide the new country for your listing.</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">New Location</label>
                        <input required class="form-control" type="text" name="listing[location]"
                            value="<%= listing.location %>" placeholder="Enter new location">
                        <div class="valid-feedback">New location details received!</div>
                        <div class="invalid-feedback">Please provide the new specific location for your listing.</div>
                    </div>

                    <button type="submit" class="mb-3 btn btn-dark add-btn">Save</button>

                </form>
            </div>
        </div>
    </body>